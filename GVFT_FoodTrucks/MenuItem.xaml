<Page x:Class="GVFT_FoodTrucks.MenuItem"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GVFT_FoodTrucks"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="100"
      Title="MenuItem" Background="#CCFA6800">

    <Grid>
        <Rectangle Fill="#FFF39C12" HorizontalAlignment="Left" Height="21" Margin="0,79,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock x:Name="lblName" HorizontalAlignment="Left" Margin="0,79,0,0" TextWrapping="Wrap" Text="ItemName" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <Image x:Name="ImgIcon" HorizontalAlignment="Left" Height="79" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Page>
