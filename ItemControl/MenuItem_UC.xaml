<UserControl x:Class="ItemControl.MenuItem_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItemControl"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="150" Background="#FFE67E22" Loaded="UserControl_Loaded">
    <Grid>
        <Rectangle Fill="#FFD35400" HorizontalAlignment="Left" Height="27" Margin="0,124,0,-1" VerticalAlignment="Top" Width="150"/>
        <TextBlock x:Name="lblName" HorizontalAlignment="Left" Margin="0,124,0,0" TextWrapping="Wrap" Text="ItemName" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <Image x:Name="ImgIcon" HorizontalAlignment="Left" Height="124" VerticalAlignment="Top" Width="150"/>
        <Border BorderThickness="1" Margin="0,16,-1,0" CornerRadius="5,0,0,5" Background="#FFC0392B" HorizontalAlignment="Right" Width="63" Height="32" VerticalAlignment="Top">
            <TextBlock x:Name="lblPrice" HorizontalAlignment="Left" TextWrapping="Wrap" Text="350" VerticalAlignment="Top" Foreground="White" FontSize="16" FontWeight="Bold" Width="61" Margin="0,3,0,0" TextAlignment="Center"/>
        </Border>

    </Grid>
</UserControl>
